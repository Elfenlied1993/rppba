<Window x:Class="RPPBA.Views.OrderForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPPBA.Views"
        mc:Ignorable="d"
        Title="OrderForm" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Background="#FECFD2" Content="Новый заказ" BorderThickness="0" FontSize="17" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="168*"/>
                <ColumnDefinition Width="471*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="4*"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Клиент" Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="6,0,6,39" FontSize="14" Grid.ColumnSpan="2" Grid.RowSpan="2"></Label>
            <Label Grid.Row="1" Content="Дата отгрузки" Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="6,0,6,38" FontSize="14" Grid.ColumnSpan="2" Grid.RowSpan="2"></Label>
            <Label Grid.Row="2" Content="Адрес" Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="6,0,6,0" FontSize="14" Grid.ColumnSpan="2"></Label>
            <ComboBox Margin="7,7,7,7"  Background="FloralWhite" BorderBrush="DarkRed" Grid.Row="0" Grid.Column="2">
                <ComboBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"></Setter>
                    </Style>
                </ComboBox.Resources>
            </ComboBox>
            <TextBox Margin="7,7,7,7" Background="FloralWhite" BorderBrush="DarkRed" Grid.Row="1" Grid.Column="2">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"></Setter>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBox Margin="7,7,7,7" Background="FloralWhite" BorderBrush="DarkRed" Grid.Row="2" Grid.Column="2">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"></Setter>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Label VerticalContentAlignment="Bottom" FontSize="14" Content="Товары" Margin="10,38,10,0" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="0,0,0,1" BorderBrush="Black" Grid.RowSpan="2"></Label>
            <ScrollViewer Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"></ScrollViewer>
            <Label Grid.Row="5" Grid.Column="0" Content="Сумма заказа" FontSize="14" VerticalContentAlignment="Center"></Label>
            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2"  Grid.Row="5" Grid.Column="1"  Margin="6">
                <Border CornerRadius="5" HorizontalAlignment="Left" Height="22" Width="230" BorderThickness="1" BorderBrush="DarkRed" Background="FloralWhite" >
                    <Label >
                    </Label>
                </Border>
                <Label Margin="6,0,0,0" Content="BYN"></Label>
            </StackPanel>
            
        </Grid>
        <Button  Background="#FECFD2" Grid.Row="2" Content ="Добавить" FontSize="18" BorderThickness="0"></Button>
    </Grid>
</Window>
